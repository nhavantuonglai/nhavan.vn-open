---
import Layout from '~/layouts/page.astro';

import Hero from '~/components/content/hero.astro';
import Catalogue from '~/components/article/catalogue.astro';
import Form from '~/components/content/form.astro';

import { Slideup } from '~/assets/framer.jsx';

const metadata = {
	title: 'Diễn đàn viết lách nhà văn tương lai',
};
---

<Layout metadata={metadata}>

	<Hero/>

	<Slideup client:load>

		<Catalogue tags="viet-lach"/>

		<Catalogue tags="khoa-hoc"/>

		<Catalogue tags="nghien-cuu"/>

		<Form/>

	<Slideup/>

</Layout>