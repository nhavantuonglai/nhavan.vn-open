---
import Form from '~/components/widgets/form.astro';
---

<Form

	title="Đăng ký điểm tin"
	content="Hãy điền thông tin để nhận email mỗi tuần, cập nhật tính năng, thông tin hoặc chia sẻ thú vị để tăng cường kết nối, gắn kết và thấu hiểu nhau hơn."

	formFields={[

		{
			label: "Bạn là ai?",
			type: "text",
			name: "ho-va-ten",
			required: true
		},

		{
			label: "Email nhận thư của bạn là?",
			type: "email",
			name: "email",
			required: true
		},

		{
			label: "Bạn muốn chia sẻ điều gì không?",
			type: "text",
			name: "noi-dung",
			required: true
		},

	]}

/>